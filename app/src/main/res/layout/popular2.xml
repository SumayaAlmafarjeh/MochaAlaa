<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:padding="10dp"
    tools:context=".CategoryHotCoffee">

    <ImageView
        android:id="@+id/icedit1imgpopular"
        android:layout_width="119dp"
        android:layout_height="153dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/iced7"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="158dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotit1name"
            android:layout_width="241dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="ChocoLatte"
            android:textAlignment="center"
            android:textColor="#372E20"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/hotit1price"
            android:layout_width="166dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="3.5JD"
            android:textAlignment="center"
            android:textColor="#1F4D2D"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/p2Detail"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="#1F4D2D"
            android:gravity="center"
            android:text="View Detail"
            android:textColor="#F1E9E5"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>

