<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/d16back"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/goback"
            tools:ignore="ContentDescription" />
    </LinearLayout>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Turkey Croissant"
            android:textAlignment="center"
            android:textColor="#372E20"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="wrap_content"
            android:layout_height="279dp"
            android:layout_gravity="center"


            android:scaleType="centerCrop"
            app:srcCompat="@drawable/d29" />
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="2.40"
            android:textAlignment="center"
            android:textColor="#372E20"
            android:textSize="30sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/coffeSize"
            android:layout_width="wrap_content"
            android:layout_height="48dp"

            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"

            android:padding="10dp"
            android:text="Bread Type"
            android:textAlignment="viewStart"
            android:textColor="#372E20 "
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/size"
            android:layout_width="380dp"
            android:layout_height="53dp"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"

                android:layout_weight="1"
                android:backgroundTint="#1F4D2D"
                android:gravity="center"
                android:padding="10dp"
                android:text="White"
                android:textStyle="bold"
                android:textColor="#1F4D2D" />

            <RadioButton
                android:id="@+id/med"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#1F4D2D"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Brown"
                android:textColor="#1F4D2D" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"

                android:padding="10dp"
                android:text="Select Sandwich Fillings:"
                android:textAlignment="viewStart"
                android:textColor="#372E20 "
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/tomatoFilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomato"
                    android:textColor="#1F4D2D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cheeseFilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olive"
                    android:textColor="#1F4D2D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/lettuceFilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lettuce"
                    android:textColor="#1F4D2D"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/vanillaFilling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mayonnaise"
                    android:textColor="#1F4D2D"
                    android:textSize="16sp" />




            </LinearLayout>





                </LinearLayout>

            </LinearLayout>





    <Button
        android:id="@+id/Add"
        android:layout_width="175dp"
        android:layout_height="53dp"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:backgroundTint="#1F4D2D"
        android:gravity="center"
        android:text="Add To Cart"
        android:textColor="#F1E9E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>