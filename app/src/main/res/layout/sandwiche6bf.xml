<!-- res/layout/popular_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/d28"
        android:layout_width="111dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/d28" />

    <TextView
        android:id="@+id/d28name"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Egg Salad"
        android:textAlignment="center"
        android:textColor="#372E20"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/d28price"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="2.75JD"
        android:textAlignment="center"
        android:textColor="#1F4D2D"
        android:textSize="14sp" />

    <Button
        android:id="@+id/d28viewDetail"
        android:layout_width="133dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:backgroundTint="#1F4D2D"
        android:gravity="center"
        android:text="@string/view_detail"
        android:textColor="#F1E9E5" />

</LinearLayout>