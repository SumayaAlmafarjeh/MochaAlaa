<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="10dp">

    <ImageView
        android:id="@+id/popular_item_image"
        android:layout_width="111dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/iced_coffee1" />

    <TextView
        android:id="@+id/popular_item_name"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Iced Caramel Latte"
        android:textAlignment="center"
        android:textColor="#372E20"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popular_item_price"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="3.5JD"
        android:textAlignment="center"
        android:textColor="#1F4D2D"
        android:textSize="14sp" />

    <Button
        android:id="@+id/viewDetail"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:backgroundTint="#1F4D2D"
        android:gravity="center"
        android:text="View Detail"
        android:textColor="#F1E9E5" />

</LinearLayout>

